<div class="row">
  <% if flash.any? %>
    <script type="text/javascript">
      $(function(){Materialize.toast("<%= notice %>", 8000);});
    </script>
  <% end %>
  <div class="col s12 m12 l12">
    <h3 class="df-font-color">Collaborators</h3>
  </div>
  <div class="col s12 m12 l12">
    <%= link_to 'New Collaborator', new_admin_collaborator_path %>
  </div>
  <div class="col s12 m12 l12 table-responsive">
    <table class="highlight">
      <thead>
        <tr>
          <th>Pos nr.</th>
          <th>Image</th>
          <th>Name</th>
          <th>Title</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @collaborators.each do |collaborator| %>
          <tr>
            <td><%= collaborator.position_nr %></td>
            <td><%= image_tag collaborator.image.thumb, class: 'responsive-img' %></td>
            <td><%= collaborator.name %></td>
            <td><%= collaborator.title %></td>
            <td><%= collaborator.email %></td>
            <td><%= link_to 'Show', [:admin, collaborator] %></td>
            <td><%= link_to 'Edit', edit_admin_collaborator_path(collaborator) %></td>
            <td><%= link_to 'Destroy', [:admin, collaborator], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>